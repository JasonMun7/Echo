rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can read/write only their own uploads
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Run screenshots — authenticated users can read; only backend (service account) writes
    match /runs/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Trace screenshots — authenticated users can read; only backend writes
    match /traces/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Training data JSONL files — no client access
    match /training/{allPaths=**} {
      allow read, write: if false;
    }
  }
}
